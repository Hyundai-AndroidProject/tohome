<?xml version="1.0" encoding="utf-8"?>
<!--
    * xml 설명 : 이용약관 화면
    *
    * @author  김민규
    -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/Preview"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/arrow_icon3" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="20dp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="필수 약관에 동의해주세요." />

    <CheckBox
        android:id="@+id/checkAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:buttonTint="@color/black"
        android:text="전체 동의합니다." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="현대식품관" />

    <CheckBox
        android:id="@+id/checkTerm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:buttonTint="@color/black"
        android:text="이용약관(필수)" />
    <CheckBox
        android:id="@+id/checkTerm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:buttonTint="@color/black"
        android:text="개인정보 수집·이용 동의 (필수)" />

    <CheckBox
        android:id="@+id/checkTerm3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:buttonTint="@color/black"
        android:text="개인정보 자동 입력 서비스 동의 (선택)" />

    <CheckBox
        android:id="@+id/checkTerm4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:buttonTint="@color/black"
        android:text="언커먼스토어 서비스 이용을 위한 개인정보 수집·이용 동의    (선택)" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="개인정보 유효기간 동의 (필수)" />


        <RadioGroup
            android:id="@+id/personalData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/untilSecede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="15dp"
                android:text="탈퇴 시까지" />

            <RadioButton
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="30dp"
                android:text="1년" />
        </RadioGroup>



    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="마케팅을 위한 개인정보 수집·이용 동의(선택)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/black"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/marketingAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/black"
            android:text="전체" />

        <CheckBox
            android:id="@+id/marketingPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/black"
            android:text="PUSH" />
        <CheckBox
            android:id="@+id/marketingSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/black"
            android:text="SMS 및 카카오톡" />
        <CheckBox
            android:id="@+id/marketingEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/black"
            android:text="이메일" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:text="취소" />

        <Button
            android:id="@+id/goSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="다음" />

    </LinearLayout>




</LinearLayout>